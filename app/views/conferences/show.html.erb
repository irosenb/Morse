<%- model_class = Conference -%>
<div class="page-header">
  <h1><%=t '.title', :default => @conference.name %></h1>
</div>

<h1>
  <%= link_to(number_to_phone(@conference.phone_number, area_code: true), conference_questions_path(@conference)) %>
</h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:open) %>:</strong></dt>
  <dd><%= @conference.open %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @conference.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @conference.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @conference.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @conference.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sid) %>:</strong></dt>
  <dd><%= @conference.sid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:token) %>:</strong></dt>
  <dd><%= @conference.token %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              conferences_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_conference_path(@conference), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              conference_path(@conference),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
